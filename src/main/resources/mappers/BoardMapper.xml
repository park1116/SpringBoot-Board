<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.board.mapper.BoardMapper">

<sql id="boardColumns">
	num,
	title,
	content,
	name,
	regdate
</sql>

<select id="selectAll" resultType="com.example.board.dto.BoardDto">
	SELECT 
		<include refid="boardColumns"/>
	FROM 
		BOARD
	ORDER BY
		num desc
</select>

<insert id="insertData" parameterType="com.example.board.dto.BoardDto">
	INSERT INTO BOARD (
		<include refid="boardColumns"/>
	) VALUES (
		#{num}
		,#{title}
		,#{content}
		,#{name}
		,now()
	)	
</insert>

<select id="selectOne" parameterType="int" resultType="com.example.board.dto.BoardDto">
	SELECT
		<include refid="boardColumns"/>
	FROM 
		BOARD 
	WHERE 
		num=#{num}
</select>

<update id="updateData" parameterType="com.example.board.dto.BoardDto">
	UPDATE 
		BOARD
	SET
		regdate = NOW()
		,title = #{title}
		,content = #{content}
	WHERE
		num=#{num}
</update>

<delete id="deleteData" parameterType="int">
	DELETE
	FROM
		BOARD
	WHERE
		num=#{num}
</delete>
</mapper>